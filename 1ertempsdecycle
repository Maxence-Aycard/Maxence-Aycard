#include <stdio.h>

int main() {
    FILE *fichier;
    char ligne[100];
    int operation;
    float temps;
    float temps_total = 0.0;

    fichier = fopen("ope.txt", "r");

    if (fichier == NULL) {
        printf("Impossible d'ouvrir le fichier.\n");
        return -1;
    }

    while (fgets(ligne, sizeof(ligne), fichier)) {
        if (sscanf(ligne, "%d %f", &operation, &temps) == 2) {
            temps_total += temps;
        } else {
            printf("Erreur de lecture de la ligne : %s\n", ligne);
        }
    }

    fclose(fichier);

    printf("Le temps total des op√©rations est : %.2f\n", temps_total);

    return 0;
}
